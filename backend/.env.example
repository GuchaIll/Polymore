# Backend Environment Variables
# Copy this file to .env and fill in the actual values

# Database Configuration
# For production: Use PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/polymore_db
# For testing/development: Use SQLite (default if not set)
# DATABASE_URL=sqlite:///./polymore_test.db

# Database Initialization
# Set to 'false' to skip database schema initialization on startup (useful for tests)
DB_INIT_ON_STARTUP=true

# Redis/Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Serverless GPU Configuration
SERVERLESS_GPU_URL=https://xxxxx-serving-api.modal.run
